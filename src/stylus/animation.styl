.appointment-column.ng-hide-remove
  -webkit-transition 0.3s ease all
  transition 0.3s ease all
  transition-delay 0.1s

.appointment-column.ng-hide
  position relative
  top 50px
  opacity 0

.appointment-column
  position relative
  top 0px
  opacity 1

.client-row.ng-enter,
.client-row.ng-leave
  -webkit-transition 0.2s ease all
  transition 0.2s ease all

.client-row.ng-enter,
.client-row.ng-leave.ng-leave-active
  opacity 0
  position relative
  left -20px

.client-row.ng-leave,
.client-row.ng-enter.ng-enter-active
  opacity 1
  position relative
  left 0px